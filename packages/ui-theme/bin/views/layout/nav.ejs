<ul class="nav">
  <% sections.forEach((section) => { %>
    <% if (!section.hidden) { %>
        <li class="nav__item">
          <a class="nav__link" href="#<%= encodeURIComponent(section.title) %>">
            <%= section.title %>
          </a>
          <% if (section.groups.length > 1) { %>
            <ul>
              <% section.groups.forEach((group) => { %>
                <li>
                  <a class="nav__link" href="#<%= encodeURIComponent(group.title) %>"><%= group.title %></a>
                </li>
              <% }) %>
            </ul>
          <% } %>
        </li>
    <% } %>
  <% }) %>
</ul>

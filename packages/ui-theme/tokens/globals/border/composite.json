{
  "border": {
    "$type": "border",
    "heavy": {
      "$value": {
        "color": "{color.black}",
        "width": "{dimensions.1}",
        "style": "{border.style.solid}"
      }
    },
    "wireframe": {
      "$value": {
        "color": "{color.orange.600}",
        "width": "{dimensions.2}",
        "style": "{border.style.dashed}"
      }
    },
    "none": {
      "$value": {
        "width": "{dimension.zero}"
      }
    },
    "small": {
      "$value": {
        "width": "{base.border.width.01}",
        "style": "{border.style.solid}"
      }
    },
    "medium": {
      "$value": {
        "width": "{base.border.width.02}",
        "style": "{border.style.solid}"
      }
    },
    "large": {
      "$value": {
        "width": "{base.border.width.03}",
        "style": "{border.style.solid}"
      }
    },
    "primary": {
      "$value": {
        "color": "{color.brand.primary.value}",
        "width": "{base.border.width.01}"
      }
    },
    "secondary": {
      "$value": {
        "color": "{color.brand.secondary.value}",
        "width": "{base.border.width.01}"
      }
    },
    "tertiary": {
      "$value": {
        "color": "{color.brand.tertiary.value}",
        "width": "{base.border.width.01}"
      }
    },
    "style": {
      "$type": "strokeStyle",
      "solid": {
        "$value": "solid"
      },
      "dashed": {
        "$value": {
          "dashArray": [
            "0.5rem",
            "0.25rem"
          ],
          "lineCap": "round"
        }
      }
    }
  }
}

{
  "extends": "@acronis-platform/configs/tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "baseUrl": ".",
    "types": [
      "node",
      "cypress",
      "vite/client",
      "vitest/globals",
      "@simonsmith/cypress-image-snapshot/types"
    ],
    "moduleResolution": "bundler"
  },
  "include": [
    "env.d.ts",
    "src",
    "src/**/*.{ts,tsx,vue}",
    "./cypress.d.ts",
    "./vitest.config.ts",
    ".storybook/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "cypress.config.ts", "cypress"]
}

{
  "name": "@acronis-platform/ui-component-library",
  "type": "module",
  "version": "1.6.6",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/acronis/ui-component-library.git"
  },
  "bugs": {
    "url": "https://github.com/acronis/ui-component-library/issues"
  },
  "sideEffects": [
    "**/*.css"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./components/*": "./dist/components/*",
    "./styles/*": "./dist/styles/*",
    "./directives/*": "./dist/directives/*"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "CHANGELOG.md",
    "dist",
    "types.d.ts"
  ],
  "scripts": {
    "dev": "NODE_ENV=dev UI_BUILD=true vite build --watch",
    "dev:component": "tsx scripts/serve.ts",
    "build": "UI_BUILD=true vite build",
    "build:report": "VITE_REPORT=true npm run build",
    "prepublishOnly": "npm run build",
    "test": "vitest",
    "test:update": "vitest --update",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui --coverage",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run --config video=false --component --headless --config-file cypress.config.ts",
    "cypress:update": "pnpm run cypress:run --env updateSnapshots=true",
    "cypress:docker:build": "docker build --tag 'cypress-tests' -f ../../Dockerfile.cypress ../..",
    "cypress:docker:run": "docker run --name 'vz-regression' --rm -v ./cypress:/workspace/packages/ui/cypress 'cypress-tests' --component --headless  --env updateSnapshots=true",
    "lint": "npm-run-all --aggregate-output -c -p lint:code lint:ts lint:stylelint",
    "lint:stylelint": "stylelint \"**/*.{css,vue}\"",
    "lint:stylelint:fix": "pnpm run lint:stylelint -- --fix",
    "lint:code": "eslint . --quiet",
    "lint:code:fix": "pnpm run lint:code --fix",
    "lint:ts": "vue-tsc --noemit",
    "lint:fix": "npm-run-all -c \"lint:code:fix\" \"lint:stylelint:fix\" || exit 0"
  },
  "peerDependencies": {
    "vue": "3.4.30",
    "vue-router": "4.4.0"
  },
  "dependencies": {
    "@acronis-platform/icons": "workspace:*",
    "@antfu/utils": "0.7.8",
    "@floating-ui/vue": "1.0.6",
    "@vueuse/core": "10.9.0",
    "colord": "2.9.3",
    "highlight.js": "11.9.0",
    "lodash-es": "4.17.21",
    "md-editor-v3": "4.17.3",
    "vue": "3.4.30",
    "vue-router": "4.4.0"
  },
  "devDependencies": {
    "@acronis-platform/browserslist-config": "workspace:*",
    "@acronis-platform/configs": "workspace:*",
    "@cypress/vue": "6.0.1",
    "@simonsmith/cypress-image-snapshot": "9.0.3",
    "@types/lodash-es": "4.17.12",
    "@types/node": "20.11.30",
    "@types/prompts": "2.4.9",
    "@vitejs/plugin-vue": "5.0.4",
    "@vitejs/plugin-vue-jsx": "3.1.0",
    "@vitest/coverage-v8": "1.6.0",
    "@vitest/ui": "1.6.0",
    "@vitest/utils": "1.6.0",
    "@vue/test-utils": "2.4.6",
    "browserslist": "4.23.0",
    "csstype": "3.1.3",
    "cypress": "13.12.0",
    "eslint": "9.3.0",
    "eslint-plugin-cypress": "3.2.0",
    "eslint-plugin-format": "0.1.2",
    "execa": "9.1.0",
    "jsdom": "24.0.0",
    "kolorist": "1.8.0",
    "minimist": "1.2.8",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.38",
    "postcss-custom-media": "10.0.4",
    "postcss-import": "16.1.0",
    "postcss-load-config": "5.0.3",
    "postcss-mixins": "10.0.0",
    "postcss-preset-env": "9.5.2",
    "prettier": "3.2.5",
    "prompts": "2.4.2",
    "rollup-plugin-node-externals": "7.0.1",
    "rollup-plugin-visualizer": "5.12.0",
    "sass": "1.77.4",
    "stylelint": "16.2.1",
    "tsx": "4.7.2",
    "typescript": "5.5.3",
    "vite": "5.2.11",
    "vite-plugin-dts": "3.8.3",
    "vite-plugin-lib-inject-css": "2.0.1",
    "vitest": "1.6.0",
    "vue-tsc": "2.0.19"
  },
  "browserslist": [
    "extends @acronis-platform/browserslist-config"
  ]
}
